<div class="accordion-wrapper" id="{{accordion_parent}}">
  {% for key, accordion_item in accordion_items %}
    {% include "@molecules/02-accordion-item/accordion-item.twig" with {
      "accordion_parent": accordion_item.accordion_parent,
      "accordion_title": accordion_item.accordion_title,
      "card_heading": accordion_item.accordion_heading,
      "card_heading_level": accordion_item.accordion_heading_level,
      "card_heading_link_url": accordion_item.accordion_heading_link_url,
      "card_heading_link_attributes": accordion_item.accordion_heading_link_attributes,
      "card_small": accordion_item.accordion_small,
      "card_subheading_level": accordion_item.accordion_subheading_level,
      "card_subheading": accordion_item.accordion_subheading,
      "card_text": accordion_item.accordion_text,
      "card_button_url": accordion_item.accordion_button_url,
      "button_extra_class": accordion_item.accordion_button_extra_class,
      "button_text": accordion_item.accordion_button_text,
      "key": key,
    } %}
  {% endfor %}
</div>
