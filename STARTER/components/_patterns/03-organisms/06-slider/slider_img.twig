{#
/**
 * Slider IMG
 *
 * http://kenwheeler.github.io/slick/
 *
 * @param string $style Hero Style -> img-left, img-right, text-center, leave empty for default
 * @param bool $img_as_background true / false
 * @param string $img_src Hero Bild Quelle
 * @param string $img_alt Hero Bild Alternativ Text
 * @param string $img_title Hero Bild Titel
 * @param int $img_height Height ohne Unit Angabe.
 * @param string $heading_level Headline Level
 * @param string $heading Headline Text
 * @param string $text Hero Text
 * @param string $button_url Button URL
 * @param string $button_class Button Extra Klasse siehe Button Pattern
 * @param string $button_text Button Text
 * @param array $sliderItems Liste aller Heros die als Slider ausgegeben werden sollen
 * @param string $slider_extra_class Extra Class falls mehre Slider auf einer Seite existieren
 *
 * @example
 * {% set sliderItems = {
 *   0: {'img_src': '../../../../images/b-connect/Service_Slide_Image.png', 'img_alt': faker('text', 50), 'img_title': faker('text', 50)},
 *   1: {'img_src': '../../../../images/b-connect/Development_Slide_Image.png', 'img_alt': faker('text', 50), 'img_title': faker('text', 50)},
 *   2: {'img_src': '../../../../images/b-connect/consulting_Slide_Image.png', 'img_alt': faker('text', 50), 'img_title': faker('text', 50)},
 * } %}
 * <h6>Slick Slider</h6>
 * {% include "@organisms/06-slider/slider_img.twig" with {
 *   sliderItems: sliderItems,
 *   slider_extra_class: 'default'
 * } %}
 */
#}

<div id="{{slider_id}}" class="slider-img {{slider_extra_class}}">
  {%- for slide in sliderItems -%}
    {% include "@atoms/06-images/00-image.twig" with {
      img_src: slide.img_src,
      img_alt: slide.img_alt,
      img_title: slide.img_title,
    } %}
  {%- endfor -%}
</div>
