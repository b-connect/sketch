{#
/**
 * Login
 *
 * Login Formular.
 *
 * @param string $login_heading Titel für Teaser im Body (mit Link wenn es verlinkt werden soll)
 * @param string $login_heading_level Header Level 1-6
 * @param string $login_username_text_placeholder Inhalt vom Placeholder
 * @param string $login_username_text_input_id ID vom Element
 * @param string $login_username_text_label_for ID für Text Label FOR
 * @param string $login_password_text_placeholder Inhalt vom Placeholder
 * @param string $login_password_text_input_id ID vom Element
 * @param string $login_password_text_label_for ID für Text Label FOR
 * @param string $login_submit_value Text auf dem Button
 * @param strin $login_submit_id Eindeutige ID des Elements
 *
 * @example
 * {% include "@organisms/08-forms/01-login.twig" with {
 *   login_username_text_label_for: faker('text', 15),
 *   login_username_text_input_id: 'textfield-username',
 *   login_username_text_placeholder: 'username',
 *   login_password_text_label_for: faker('text', 15),
 *   login_password_text_input_id: 'textfield-password',
 *   login_password_text_placeholder: 'password',
 *   login_submit_id: 'user-login-form-submit1',
 *   login_submit_value: 'Login',
 *   login_heading: 'Login',
 *   login_heading_level: 2,
 * } %}
 */
#}

<section>
  {% include "@atoms/00-text/01-headings.twig" with {
    "heading_level": login_heading_level,
    "heading": login_heading
  } %}
  <form class="user-login-form" data-drupal-selector="user-login-form" action="/user/login" method="post" id="user-login-form" accept-charset="UTF-8" novalidate="novalidate">
    {% include "@atoms/04-forms/01-textfield.twig" with {
      text_label_for: login_username_text_label_for,
      text_input_id: login_username_text_input_id,
      text_placeholder: login_username_text_placeholder,
      form_required: true,
      autocorrect: 'off',
      spellcheck: false,
      autocomplete: 'off',
      type_input: 'text'
    } %}

    {% include "@atoms/04-forms/01-textfield.twig" with {
      text_label_for: login_password_text_label_for,
      text_input_id: login_password_text_input_id,
      text_placeholder: login_password_text_placeholder,
      form_required: true,
      autocorrect: 'off',
      spellcheck: false,
      autocomplete: 'off',
      type_input: 'password'
    } %}

    <input data-drupal-selector="edit-user-login-form" type="hidden" name="form_id" value="user_login_form">

    {% include "@atoms/04-forms/07-submit.twig" with {
      submit_id: login_submit_id,
      submit_value: login_submit_value
    } %}
  </form>
</section>
