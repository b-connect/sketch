{#
/**
 * Tabs
 *
 * Vollständiges Tabs Element mit Navigation Links molecules/03-tab/tab-navigation-link und
 * der Inhalt der Tabs molecules/03-tab/tab-pane. Beide Parts können inhaltlich ausgetauscht werden
 * ohne es beispielsweise mit der FOR-Schleife zu durchlaufen.
 *
 * @param int $key Key vom Array der Tab Elemente (muss im Array bestückt werden)
 * @param string $tab_url Link für den Tab (ID)
 * @param string $tab_title Titel für den Tab (Link)
 * @param int $tab_heading_level Es ist eine Zahl von 1 bis 6 um die h1-h6 zu steuern.
 * @param string $tab_heading Das ist der Titel (string) der anzeigt wird.
 * @param string $tab_heading_class Extra Klasse für Headlines
 * @param string $tab_text Content für den Tab (Vollständiges P-Tag)
 *
 * @example
 * {% set tab_items = {
 *   0: {'tab_url': 'tab1', 'tab_title': faker('text', 5), 'tab_heading': faker('text', 50), 'tab_heading_level': 3, 'tab_text': faker('text', 200)},
 *   1: {'tab_url': 'tab2', 'tab_title': faker('text', 10), 'tab_heading': faker('text', 50), 'tab_heading_level': 3, 'tab_text': faker('text', 200)},
 *   2: {'tab_url': 'tab3', 'tab_title': faker('text', 8), 'tab_heading': faker('text', 50), 'tab_heading_level': 3, 'tab_text': faker('text', 200)},
 *   3: {'tab_url': 'tab4', 'tab_title': faker('text', 7), 'tab_heading': faker('text', 50), 'tab_heading_level': 3, 'tab_text': faker('text', 200)},
 * } %}
 * {% include "@organisms/01-tabs/tabs.twig" with {
 *   tab_items: tab_items
 * } %}
 */
#}

<div class="tab-wrapper">
  <ul class="nav tabs" role="tablist">
    {% block tabnavigation %}
      {%- for key, tab_link in tab_items -%}
        {% include "@molecules/03-tab/tab-navigation-link.twig" with {
          "tab_url": tab_link.tab_url,
          "tab_title": tab_link.tab_title,
          "key": key,
        } %}
      {%- endfor -%}
    {% endblock %}
  </ul>

  <div class="tab-content">
    {% block tabcontent %}
      {%- for key, tab_item in tab_items -%}
        {% include "@molecules/03-tab/tab-pane.twig" with {
          "tab_url": tab_item.tab_url,
          "tab_heading_level": tab_item.tab_heading_level,
          "tab_heading": tab_item.tab_heading,
          "tab_text": tab_item.tab_text,
          "key": key,
        } %}
      {%- endfor -%}
    {% endblock %}
  </div>
</div>
