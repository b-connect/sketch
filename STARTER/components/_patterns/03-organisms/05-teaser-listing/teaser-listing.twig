 *   2: {'teaser_heading': faker('text', 50), 'teaser_heading_level': 3, 'teaser_subheading_level': 4, 'teaser_subheading': faker('text', 50), 'teaser_text': faker('text', 400), 'teaser_img_position': 'left', 'teaser_img_src': '../../../../images/b-connect/consulting_Slide_Image.png', 'teaser_img_title': faker('text', 50), 'teaser_img_alt': faker('text', 50)},
 *   3: {'teaser_heading': faker('text', 50), 'teaser_heading_level': 3, 'teaser_subheading_level': 4, 'teaser_subheading': faker('text', 50), 'teaser_text': faker('text', 400), 'teaser_img_position': 'right', 'teaser_img_src': '../../../../images/b-connect/consulting_Slide_Image.png', 'teaser_img_title': faker('text', 50), 'teaser_img_alt': faker('text', 50)},
 *   4: {'teaser_heading': faker('text', 50), 'teaser_heading_level': 3, 'teaser_subheading_level': 4, 'teaser_subheading': faker('text', 50), 'teaser_text': faker('text', 400)},
 *   5: {'teaser_heading': faker('text', 50), 'teaser_heading_level': 3, 'teaser_subheading_level': 4, 'teaser_subheading': faker('text', 50), 'teaser_text': faker('text', 400), 'teaser_img_position': 'right', 'teaser_img_src': '../../../../images/b-connect/consulting_Slide_Image.png', 'teaser_img_title': faker('text', 50), 'teaser_img_alt': faker('text', 50), 'teaser_button_url': '#', 'teaser_button_class': 'filled', 'teaser_button_text': faker('text', 50)},
 * } %}
 * <h6>Image Left</h6>
 * <br />
 * {% include "@organisms/05-teaser-listing/teaser-listing.twig" with {
 *   teasers: teasers,
 * } %}
 */
