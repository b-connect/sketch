<div class="teaser-list">
  {%- for teaser in teasers -%}
    {% include "@molecules/06-teaser/teaser.twig" with {
      "teaser_img_position": teaser.teaser_img_position,
      "title_section_above": teaser.title_section_above,
      "teaser_heading_level": teaser.teaser_heading_level,
      "teaser_heading": teaser.teaser_heading,
      "teaser_heading_link_url": teaser.teaser_heading_link_url,
      "teaser_heading_link_attributes": teaser.teaser_heading_link_attributes,
      "teaser_small": true,
      "teaser_subheading_level": teaser.teaser_subheading_level,
      "teaser_subheading": teaser.teaser_subheading,
      "teaser_img_src": teaser.teaser_img_src,
      "teaser_img_title": teaser.teaser_img_title,
      "teaser_img_alt": teaser.teaser_img_alt,
      "teaser_text": teaser.teaser_text,
      "teaser_button_url": teaser.teaser_button_url,
      "teaser_button_class": teaser.teaser_button_class,
      "teaser_button_text": teaser.teaser_button_text
    } %}
  {%- endfor -%}
</div>
