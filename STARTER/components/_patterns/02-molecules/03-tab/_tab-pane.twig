{#
/**
 * Tab Pane
 *
 * Implementation Bootstrap Tabs, das hier sind nur der Inhalt (Tabs) der ein und ausgeblendet wird.
 * Standard ist Headline und Text, kann aber via Embed überschrieben werden.
 * https://getbootstrap.com/docs/4.1/components/navs/#javascript-behavior
 *
 * @param int $key Key vom Array der Tab Elemente (muss im Array bestückt werden)
 * @param string $tab_url Link für den Tab (ID)
 * @param string $tab_title Titel für den Tab (Link)
 * @param int $tab_heading_level Es ist eine Zahl von 1 bis 6 um die h1-h6 zu steuern.
 * @param string $tab_heading Das ist der Titel (string) der anzeigt wird.
 * @param string $tab_heading_class Extra Klasse für Headlines
 * @param string $tab_text Content für den Tab (Vollständiges P-Tag)
 *
 * @example
 * {% set paragraph_concat = '<p>' ~ faker('text', 400) ~ '</p>'%}
 * {% set tab_items = {
 *   0: {'tab_url': 'tab1', 'tab_title': faker('text', 5), 'tab_heading': faker('text', 50), 'tab_heading_level': 3, 'tab_text': paragraph_concat},
 *   1: {'tab_url': 'tab2', 'tab_title': faker('text', 10), 'tab_heading': faker('text', 50), 'tab_heading_level': 3, 'tab_text': paragraph_concat},
 *   2: {'tab_url': 'tab3', 'tab_title': faker('text', 8), 'tab_heading': faker('text', 50), 'tab_heading_level': 3, 'tab_text': paragraph_concat},
 *   3: {'tab_url': 'tab4', 'tab_title': faker('text', 7), 'tab_heading': faker('text', 50), 'tab_heading_level': 3, 'tab_text': paragraph_concat},
 * } %}
 * <div class="tab-content">
 *   {% for key, tab_item in tab_items %}
 *     {% include "@molecules/03-tab/tab-pane.twig" with {
 *       "tab_url": tab_item.tab_url,
 *       "tab_heading_level": tab_item.tab_heading_level,
 *       "tab_heading": tab_item.tab_heading,
 *       "tab_text": tab_item.tab_text,
 *       "key": key,
 *     } %}
 *   {% endfor %}
 * </div>
 */
#}

<div id="{{tab_url}}" class="tab-pane{% if key == 0 %} active{% else %} fade{% endif %}"><br>
  {% block tab_pane_content %}
    {%- if tab_heading -%}
      {% include "@atoms/00-text/01-headings.twig" with {
        heading_level: tab_heading_level,
        heading: tab_heading,
        heading_class: tab_heading_class
      } %}
    {%- endif -%}
    {%- if tab_text -%}
      {% block tab_text %} 
        {% include "@atoms/00-text/00-paragraph.twig" with {
          paragraph_content: tab_text
        } %}
      {% endblock %}
    {%- endif -%}
  {% endblock %}
</div>
