    <section>
      {% include "@atoms/00-text/01-headings.twig" with { heading_level: 2, heading: heading_3, heading_class: heading_class_extra} %}
      {% include "@organisms/04-card-grid/card-grid.twig" with {cards: frontpage_cards2, card_grid_key: "three"} %}
    </section>
    <section>
      {% include "@atoms/00-text/01-headings.twig" with { heading_level: 2, heading: heading_3, heading_class: heading_class_extra} %}
      <div class="reference-grid grid-six">
          {% for img in refimages %}
