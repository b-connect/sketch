{% embed '@templates/site-container.twig' %}
  {% block site_content %}
    <section>
      {% include "@organisms/06-slider/slider_hero.twig" with {slider_id: 'slider_front'}%}
    </section>
    <section>
      {% include "@atoms/00-text/01-headings.twig" with { heading_level: 2, heading: heading_1, heading_class: heading_class_extra} %}
      {% include "@organisms/04-card-grid/card-grid.twig" with {cards: frontpage_cards1, card_grid_key: "three"} %}
    </section>
    <section>
      {% include "@atoms/00-text/01-headings.twig" with { heading_level: 3, heading: heading_2, heading_class: heading_class_extra} %}
      {% include "@atoms/00-text/00-paragraph.twig" with { paragraph_content: front_page_text_1} %}
