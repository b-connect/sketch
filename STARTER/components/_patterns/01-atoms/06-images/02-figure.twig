<figure>
  {% block figure_content %}
    {% include "@atoms/06-images/03-responsive-image.twig" with {
      res_img_src: figure_img_src,
      res_img_alt: figure_img_alt,
      res_img_title: figure_img_title,
      res_img_url: figure_img_url,
      output_image_tag: figure_output_image_tag,
      res_img_srcset: figure_img_srcset,
      res_img_sizes: figure_img_sizes,
      res_picture_img_srcset: figure_picture_img_srcset
    } %}
  {% endblock %}
  {% if img_caption %}
    <figcaption>
      {{ img_caption }}
    </figcaption>
  {% endif %}
</figure>

