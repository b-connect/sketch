{#
/**
 * Description List
 *
 * Description List, dieses Pattern wird zu 90% nur als Vorschau verwendet, meist wird der HTML Tag via WYSIWYG gesetzt.
 *
 * @param string $content.dt Inhalt pro Zeile in einer Liste für DT
 * @param string $content.dd Inhalt pro Zeile in einer Liste für DD
 * @param string $list_class um der Liste eine Klasse geben zu können und das aussehen etwas zu steuern.
 *
 * @example
 * {% set list_items = {
 *   'item0': [{'dt': faker('word',1), 'dd': faker('text')}],
 *   'item1': [{'dt': faker('word',1), 'dd': faker('text')}],
 *   'item2': [{'dt': faker('word',1), 'dd': faker('text')}],
 *   'item3': [{'dt': faker('word',1), 'dd': faker('text')}],
 * } %}
 * <div class="sg-lists">
 *   {% include "@atoms/02-lists/02-description-list.twig" with {
 *     items: list_items
 *   } %}
 * </div>
 *
 */
#}

<dl {% if list_class %} class="{{list_class}}" {% endif %}>
    {%- for item in items -%}
      {%- for content in item -%}
        <dt>{{content.dt}}</dt>
        <dd>{{content.dd}}</dd>
      {%- endfor -%}
    {%- endfor -%}
</dl>
