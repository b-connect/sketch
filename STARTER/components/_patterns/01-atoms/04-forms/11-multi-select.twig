{#
 /**
 * Multi Select
 *
 * Multi Select ist ein Select Feld im Form einer Liste und nicht wie üblich in einem Dropdown, dieses Feld wird genutzt um mehrere Optionen selektieren zu können.
 *
 * @param string $select_label Label oberhalb des Selectfeldes
 * @param array $items Array mit den möglichen Optionen im diesem Selectfeld
 * @param string $form_help_text Der Beschreibungstext / Hilfstext
 * @param string $select_name Definiert einen Namen für die Liste
 * @param string $select_id Eindeutige ID für das Formelement
 * @param bool $form_required Trage true ein, wenn es sich um ein Pflichtfeld handelt
 *
 * @example
 * {% set items = {0: 'None', 1: faker('text', 25), 2: faker('text', 25), 3: faker('text', 25), 4: faker('text', 25)} %}
 * {% include "@atoms/04-forms/11-multi-select.twig" with {
 *   items: items,
 *   select_label: 'Multiple Select',
 *   select_name: faker('text', 5),
 *   select_id: faker('text', 5)
 * } %}
 */
#}

<div class="form-item form-type-multi-select form-item-multi-select">
  <label class="label" for="edit-checkboxes">{{select_label}}</label>
  <select multiple="multiple" name="{{select_name}}" id="{{select_id}}" class="form-select" {% if form_required %} required aria-required="true" {% endif %}>
    {%- for item in items -%}
      <option value="{{item|lower|replace(' ', '-')}}">{{item}}</option>
    {%- endfor -%}
  </select>
  {%- if form_help_text -%}
    <div class="description">{{form_help_text}}</div>
  {%- endif -%}
</div>