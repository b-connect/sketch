{#
/**
 * Logo
 *
 * Mit diesem Pattern wird das Logo auf der Webseite eingebunden
 *
 * @param string $img_href Link zur Startseite muss hier eingetragen werden
 * @param string $img_alt Alternative Text für das Bild
 * @param string $img_title Titel für das Bild
 * @param string $img_src Pfad zum Bild
 *
 * @example
 * <img src="https://dummyimage.com/100x100/ededed/2e2e2e&text=Logo" alt="" style="max-width: 450px; height: auto;">
 */
#}
<a href="{{img_href}}"><img alt="{{img_alt}}" title="{{img_title}}" class="logo" src="{{img_src}}"></a>
